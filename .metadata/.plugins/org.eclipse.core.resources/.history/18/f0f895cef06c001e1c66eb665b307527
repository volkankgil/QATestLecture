package SeleniumLesson2;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;

public class actionsDemo {

	public static void main(String[] args) {
		System.setProperty("webdriver.chrome.driver","/Users/satÄ±nalma2.AYG01/chromedriver.exe");
		WebDriver driver=new ChromeDriver();
		driver.manage().window().maximize();
		driver.get("https://www.amazon.com");
		
		Actions a=new Actions(driver);

		//a.moveToElement(driver.findElement(By.xpath("")))
		
		a.moveToElement(driver.findElement(By.xpath("/html/body/div[1]/header/div/div[1]/div[3]/div/a[2]"))).build().perform();

	}

}
